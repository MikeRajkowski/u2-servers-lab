<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >

    <ItemsPanelTemplate x:Key="SBCharacterLayoutItemsPanelTemplate">
        <Grid Margin="6.5"  x:Name="PART_SBCharacterLayoutPanel" ShowGridLines="False" />
    </ItemsPanelTemplate>

    <ControlTemplate x:Key="SBCharacterLayoutItemsControlTemplate" TargetType="ItemsControl">
        <ItemsPresenter SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
    </ControlTemplate>

</ResourceDictionary>