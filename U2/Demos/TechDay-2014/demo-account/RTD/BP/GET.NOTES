SUBROUTINE GET.NOTES(ID, NOTES, RTNVAL) 
	RTNVAL = 0

	OPEN "NOTES" TO F.NOTES THEN
		EXECUTE 'SELECT NOTES WITH CUST.ID=':ID:' BY @ID' CAPTURING OUT
		LOOP
		READNEXT NOTE.ID ELSE EXIT
			READ REC FROM F.NOTES, NOTE.ID THEN
				NOTES<-1> = LOWER(REC)
			END
		REPEAT
		CLOSE F.NOTES
	END ELSE
		RTNVAL = -1
		REC = "Unable to open NOTES file."
	END
RETURN
